<body class="welcome">
<center>
<h1>JOHDA DELIVERY</h1>
<br/>
<br/>
	<%=form_tag("johda/main") do %>
		Search Address:
		<%= text_field_tag("address") %>
		<%= submit_tag "search" %>
	<% end %>
	<%= flash[:success].html_safe unless flash[:success].blank? %><br>
		

<div class="page-container">
  <div class="flex-container">
    <div class="country netherlands" style= "height:150px;"><div>Netherlands</div></div>
    <div class="country belgium"><div>Belgium</div></div>
    <div class="country france"><div>France</div></div>
    <div class="country germany"><div>Germany</div></div>
    <div class="country england"><div>England</div></div>
  </div>
</div>


</center>
</body>

<script>
	$(".country").click(function() {
  $(this).toggleClass("active");
  $(".page-container").toggleClass("opened");
});
</script>