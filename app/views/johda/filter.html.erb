<center>
<%if params["page"].nil?%>
	<h4>1 - 8 of <%=session["results"].name.length%> Restaurants delivering to</h4>
	<h4><strong><%= session["results"].search_address %></strong></h4>
	<br/>
<%else%>
	<h4><%=(params["page"].to_i * 4) + 1%> - <%=(params["page"].to_i * 8)%> of <%=session["results"].name.length%> Restaurants delivering to</h4>
	<h4><strong><%= session["results"].search_address %></strong></h4>
<%end%>

</center>
	<% @page.each do |e| %>
		<div id="<%= e.merchant_id %>" >
			 <%= form_tag("../menus/index") do %>
			<ul class="flex-container2">
							
			  <li class="flex-item_rest">
				<img src="<%= e.logo %>" width="80px" />
			  </li>
							
			  <li class="flex-item_rest" >
			  	<strong><%= e.name %></strong><br>
				<%= e.address %><br>
				<%= e.phone_number %><br>
			  </li>
							
			  <li class="flex-item_rest" style="line-height: 700%;text-align: center;">
				<img src="<%= e.rating_img %>"/><br>
			  </li>

			  <li class="flex-item_rest">
				Cuisine: <%= e.cuisine[1...-1] %><br>
			  </li>
							
			  <li class="flex-item_rest">
				Est. Delivery: <%= e.time_needed %><br>
			  </li>

			  <li class="flex-item_rest">
				Delivery Charge: $<%= e.delivery_charge %><br>
				Minimum Order: $<%= e.min_order %><br>
			  </li>
							
			  <li class="flex-item_rest">
				<%= text_field_tag("#{e.merchant_id}")%>
				<%= submit_tag "Menu" %>
			  </li>

			</ul>
			 <% end%>
			 <hr style="margin-top: 4px; margin-bottom: 4px;">
		</div>
	<% end %>

<center>
	<%=paginate @page%>
</center>

	<h4>Filter by:</h4>
	<div class="show_hide">
		<h5>Show/Hide<h5>
	</div>
	<%= form_tag("/johda/filter") do %>
	<div class="cuisine">
		<% session["cuisine"].each_with_index do |e,i| %>
			<%= e %><input type="checkbox" name="cuisine <%=i%>" value="<%= e %>"><br>
		<% end %>
		<%= submit_tag "Filter" %>
	</div>
	<% end %>
		<%= form_tag("/johda/main") do %>
			<%= submit_tag "No Filter" %>
		<%end%>

<script>
	$( document ).ready(function() {
    $("[type='text']").hide()

    $(".show_hide").click(function(){
    	$(".cuisine").toggle()
    })
	});
</script>