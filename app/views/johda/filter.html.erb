<center>
<h2>Delivering to: <%= session["results"].search_address %></h2>
<h2>List of Restaurants</h2>	<br>
		<% @page.each do |e| %>
				<div id="<%= e.merchant_id %>" style="width: 60%;" >
 <%= form_tag("../menus/index") do %>
				
				<div style="float: left; width: 33%; text-align: center;">
				<img src="<%= e.logo %>" width="100px" />
				</div>

				<div style="float: left; width: 34%; text-align: center;">
				<strong><%= e.name %></strong><br>
				<%= e.address %><br>
				<%= e.phone_number %><br>
				<img src="<%= e.rating_img %>" /><br>
				Time Needed: <%= e.time_needed %><br>
				Delivery Charge: $<%= e.delivery_charge %><br>
				Minimum Order: <%= e.min_order %><br>
				</div>

				<div style="float: left; width: 33%;">
				<br/>
				<br/>
				<%= text_field_tag("#{e.merchant_id}")%>
				<%= submit_tag "Menu" %>
				<br><br>
				</div>

				 <br style="clear: left;" />
				<br/>
			<% end%>
		</div>
	<% end %>

	<h4>Filter by:</h4>
	<%= form_tag("/johda/filter") do %>
		<% session["cuisine"].each_with_index do |e,i| %>
			<%= e %><input type="checkbox" name="cuisine" value="<%= e %>"><br>
		<% end %>
		<%= submit_tag "Filter" %>
	<% end %>

	<%= form_tag("/johda/main") do %>
		<%= submit_tag "No Filter" %>
	<%end%>

<%=paginate @page%>
</center>


<script>
	$( document ).ready(function() {
    $("[type='text']").hide()
	});
</script>
