<script>
	$( document ).ready(function() {
		  var ok

		  
			$("#blake").click(function(event) {

				if ($('.catbox:checked').parent().parent().parent().attr('class') == 'cat')
				{
					var x = $('.catbox:checked').attr('id')

					ok = $(event.target).parent().parent().parent().attr('id')
					$('[class="'+ok+ ' items hidden"]').removeClass('hidden')
				};


			
				if ($('.catbox'))
				{

					$('.catbox').each(function(){
						
						if (!this.checked){
							
							if (!$(this).parent().parent().parent().hasClass('hidden')){
								
								x = $(this).parent().parent().parent().attr('id')
								$('[class="'+x+ ' items"]').addClass('hidden')
							}
						}
					})
					
				}

	

			  })
			
		

});
</script>