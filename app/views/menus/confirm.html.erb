<h1>Thank You for Ordering!<h1>
<h2>Your order will be processed and will be delivered later</h2>
<h4>Ordered on: <%= Time.now.strftime('%a, %d %b %Y %H:%M:%S %p')%></h4>
<h3></h3>
<h4>Your order:</h4>
<img src="<%= @order.restaurant.logo %>" alt="logo" height="42" width="42">

<br>

<%= @order.name %>

<br>

<% @order.catagories.each do |cat| %>
	<%= cat.title %>
<%end%>

<br>


<% @order.items.each do |item| %>
	<%= item.name %>- $<%= item.price%>
<%end%>

<br>



<% @order.groups.each do |groups| %>
	<%= groups.name %>-
	<% if groups.price.nil? %>
		$-
	<% else %>
		<%= groups.price%>
	<%end%>
<%end%>

<br>


<% @order.options.each do |options| %>
	<%= options.name %>-
	<% if options.price == "0" %>
		$- <br>
	<% else %>
		$<%= options.price%><br>
	<%end%>
<%end%>

<br>